{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "datefmt": "%d/%m/%Y %H:%M:%S"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "ERROR",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
        "file_handler_debug": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "./logs/actionshark_debug.log",
            "maxBytes": 10485760,
            "backupCount": 10,
            "encoding": "utf8"
        },
        "file_handler_error": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "simple",
            "filename": "./logs/actionshark_error.log",
            "maxBytes": 10485760,
            "backupCount": 10,
            "encoding": "utf8"
        }
    },
    "loggers": {
        "main": {
            "level": "DEBUG",
            "handlers": [
                "file_handler_debug",
                "file_handler_error",
                "console"
            ],
            "propagate": "no"
        }
    }
}